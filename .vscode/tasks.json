{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "Make debugging build!",
            "windows": {
                "command": "mingw32-make"
            },
            "linux": {
                "command": "make"
            },
            "args": [
                "DebuggingBuild"
            ],
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "type": "shell",
            "label": "Make release build!",
            "windows": {
                "command": "mingw32-make"
            },
            "linux": {
                "command": "make"
            },
            "args": [
                "ReleaseBuild"
            ],
            "problemMatcher": [
                "$gcc"
            ],
        }
    ]
}